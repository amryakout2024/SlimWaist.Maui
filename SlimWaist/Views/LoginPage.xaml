<?xml version="1.0" encoding="utf-8" ?>
<ur:UraniumContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:extention="clr-namespace:SlimWaist.Extentions"
             xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
             xmlns:helpers="clr-namespace:SlimWaist.Helpers"
             xmlns:lang="clr-namespace:SlimWaist.Languages"
             xmlns:mat="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SlimWaist.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             FlowDirection="{extention:FlowDirectionsExtention}"
             Title="LoginPage">
    
    <ur:UraniumContentPage.Resources>
        <Style TargetType="mat:TextField" x:Key="InvalidMatTextFieldStyle">
            <Setter Property="TextColor" Value="Red"/>
        </Style>
        <Style TargetType="mat:TextField" x:Key="ValidMatTextFieldStyle">
            <Setter Property="TextColor" Value="DarkSlateBlue"/>
        </Style>

    </ur:UraniumContentPage.Resources>
    
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout>
            <Image Source="earth.png"
                   WidthRequest="23" VerticalOptions="Center"
                   HorizontalOptions="Center">
                <Image.Behaviors>
                    <toolkit:IconTintColorBehavior TintColor="{StaticResource MainColor}"/>
                </Image.Behaviors>
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
        </HorizontalStackLayout>

        <Label
            Text="{extention:TranslateExtention Key=LoginPageTitle}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="{StaticResource MainColor}"
            FontSize="30"/>
        
        <Image
            Source="fd"/>
        
        <mat:TextField 
            Text="{Binding Email}"
            Title="{extention:TranslateExtention Key=Email}"
            TitleColor="Gray"
            CornerRadius="10"
            AllowClear="True"
            AccentColor="DarkSlateBlue"
            FontSize="16">
            <mat:TextField.Validations>
                <helpers:ValidateForNullOrEmpty/>
                <validation:RegexValidation  Pattern="" Message="{extention:TranslateExtention Key=RegexValidationMessage}"/>
            </mat:TextField.Validations>
            <mat:TextField.Behaviors>
                <toolkit:EmailValidationBehavior Flags="ValidateOnValueChanged"
                                                 InvalidStyle="{StaticResource InvalidMatTextFieldStyle }"
                                                 ValidStyle="{StaticResource ValidMatTextFieldStyle}"/>
            </mat:TextField.Behaviors>
        </mat:TextField>

        <mat:TextField 
            Text="{Binding Password}"
            Title="{extention:TranslateExtention Key=Password}"
            IsPassword="True"
            TextColor="DarkSlateBlue"
            TitleColor="DarkGray"
            CornerRadius="10"
            AccentColor="DarkSlateBlue"
            FontSize="16">
            <mat:TextField.Validations>
                <helpers:ValidateForNullOrEmpty/>
                <validation:RegexValidation  Pattern="" Message="{extention:TranslateExtention Key=RegexValidationMessage}"/>
            </mat:TextField.Validations>
            <mat:TextField.Attachments>
                <mat:TextFieldPasswordShowHideAttachment/>
            </mat:TextField.Attachments>
        </mat:TextField>

        <mat:CheckBox Text="{extention:TranslateExtention Key=LoginPageCheckBox}"
                      TextFontSize="15"
                      BoxSizeRequest="20" 
                      IsChecked="{Binding IsCheckBoxChecked}"
                      CheckChangedCommand="{Binding SaveLoginCommand}"/>
        
        <Button 
            Text="{extention:TranslateExtention Key=LoginPageButtonLogin}"
            FontSize="20"
            BackgroundColor="DarkSlateBlue"
            TextColor="White"
            Command="{Binding LoginCommand}"
            VerticalOptions="Center"
            Padding="0"/>
        
        <HorizontalStackLayout>
            <Label
                FontSize="15"
                VerticalOptions="Center"
            Text="{extention:TranslateExtention Key=LoginPageLabelHaveNoMembership} "/>
            <Label 
                Text="{extention:TranslateExtention Key=LoginPageLabelAddNewMembership}"
                FontSize="16"
                BackgroundColor="Transparent"
                TextColor="DodgerBlue"
                VerticalOptions="Center"
                Padding="0" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer 
                        Command="{Binding RegisterNewMemberShipCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ur:UraniumContentPage>