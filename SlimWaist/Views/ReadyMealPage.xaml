<?xml version="1.0" encoding="utf-8" ?>
<ur:UraniumContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
             xmlns:myValidations="clr-namespace:SlimWaist.Validations"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:mat="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:m="clr-namespace:SlimWaist.Models"
             xmlns:vm="clr-namespace:SlimWaist.ViewModels"
             xmlns:extention="clr-namespace:SlimWaist.Extentions"        
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SlimWaist.Views.ReadyMealPage"
             Shell.NavBarIsVisible="True"
             x:Name="this" 
             Shell.TabBarIsVisible="False"
             FlowDirection="{extention:FlowDirectionsExtention}">

    <ur:UraniumContentPage.Resources>
        <Style x:Key="InvalidMatTextFieldStyle" TargetType="mat:TextField">
            <Setter Property="TextColor" Value="Red" />
        </Style>
        <Style x:Key="ValidMatTextFieldStyle" TargetType="mat:TextField">
            <Setter Property="TextColor" Value="DarkSlateBlue" />
        </Style>
        <Style TargetType="Label" x:Key="TitleLabel">
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <Style TargetType="Label" x:Key="ValueLabel">
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>

    </ur:UraniumContentPage.Resources>

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoToFoodsPageCommand}"/>
    </Shell.BackButtonBehavior>

    <Shell.TitleView>
        <Border BackgroundColor="White" 
                Margin="0"
                StrokeThickness="0">
            <Grid ColumnDefinitions="auto,*">
                <Label 
                    Text="{extention:TranslateExtention Key=Readymeal}"
                    TextDecorations="None"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    TextColor="{StaticResource MainColor}"
                    FontSize="20"
                    VerticalOptions="Center"/>
            </Grid>
        </Border>
    </Shell.TitleView>

    <Grid>
        <ScrollView>
            <Grid
                RowDefinitions="auto,auto,auto,*" 
                Padding="5,0,5,0" 
                RowSpacing="5">
                <HorizontalStackLayout 
                Grid.Row="0"
                Spacing="5">
                    <Label 
                    Text="{extention:TranslateExtention Key=Mealname}"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    TextColor="{StaticResource MainColor}"
                    FontSize="18"
                    VerticalOptions="Center"/>
                    <Label 
                    Text=":"
               Grid.Row="0"
               TextDecorations="None"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="{StaticResource MainColor}"
               FontSize="18"
               VerticalOptions="Center"/>
                    <Label 
                    Text="{Binding MealName}"
               Grid.Row="0"
               TextDecorations="None"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="IndianRed"
               FontSize="20"
               VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout 
                Grid.Row="1"
                Spacing="5">
                    <Label 
                    Text="{extention:TranslateExtention Key=Mealdate}"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    TextColor="{StaticResource MainColor}"
                    FontSize="18"
                    VerticalOptions="Center"/>
                    <Label 
                    Text=":"
               Grid.Row="0"
               TextDecorations="None"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="{StaticResource MainColor}"
               FontSize="18"
               VerticalOptions="Center"/>
                    <HorizontalStackLayout VerticalOptions="Center"
                                           >
                        <HorizontalStackLayout.Resources>
                            <Style TargetType="Label">
                                <Setter Property="FontSize" Value="18"/>
                            </Style>
                        </HorizontalStackLayout.Resources>
                        <Label TextColor="IndianRed" 
                                       Text="{Binding DayDietDate.Day}"
                                       FontAttributes="Bold"/>
                        <Label TextColor="IndianRed" 
                                       Text="/"
                                       FontAttributes="Bold"/>
                        <Label TextColor="IndianRed" 
                                       Text="{Binding DayDietDate.Month}"
                                       FontAttributes="Bold"/>
                        <Label TextColor="IndianRed" 
                                       Text="/"
                                       FontAttributes="Bold"/>
                        <Label TextColor="IndianRed" 
                                       Text="{Binding DayDietDate.Year}"
                                       FontAttributes="Bold"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>

                <Border
                Stroke="Black"
                StrokeThickness="1"
                Grid.Row="2">
                    <VerticalStackLayout
                    Padding="10"
                    Spacing="5">

                        <Label
                        TextColor="Black"
                        FontSize="18"
                        FontAttributes="Bold"
                        Text="{extention:TranslateExtention Key=Nutritionfacts}"/>
                        <BoxView
                        HeightRequest="2"
                        Margin="20,0,20,0"
                        Color="Black" />

                        <Grid ColumnDefinitions="*,auto">
                            <Label
                            Grid.Column="0"
                            TextColor="Black"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="{extention:TranslateExtention Key=Mealsize}"/>
                            <HorizontalStackLayout
                            Spacing="5"
                            Grid.Column="1">
                                <Label
                               FontAttributes="Bold"
                                TextColor="Black"
                                FontSize="14"
                                Text="{Binding MealSize}"/>
                                <Label
                                TextColor="Black"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{extention:TranslateExtention Key=Gm}"/>
                            </HorizontalStackLayout>
                        </Grid>
                        <BoxView
                        HeightRequest="2"
                        Margin="20,0,20,0"
                        Color="Black" />

                        <Grid ColumnDefinitions="*,auto">
                            <Label
                        Grid.Column="0"
                    TextColor="Black"
                        FontAttributes="Bold"
                    FontSize="18"
                    Text="{extention:TranslateExtention Key=Calories}"/>
                            <HorizontalStackLayout
                            Spacing="5"
                            Grid.Column="1">
                                <Label
                        Grid.Column="1"
                    TextColor="Black"
                        FontAttributes="Bold"
                    FontSize="20"
                    Text="{Binding TotalMealCalories}"/>
                                <Label
                                TextColor="Black"
                                FontAttributes="Bold"
                                FontSize="14"
                                VerticalOptions="Center"
                                Text="{extention:TranslateExtention Key=Cal}"/>
                            </HorizontalStackLayout>

                        </Grid>
                        <BoxView
                    HeightRequest="2"
                    Margin="20,0,20,0"
                    Color="Black" />

                        <Grid ColumnDefinitions="*,auto">
                            <Label
                        Grid.Column="0"
                    TextColor="Black"
                        FontAttributes="Bold"
                    FontSize="14"
                    Text="{extention:TranslateExtention Key=Totalcarbohydrates}"/>
                            <HorizontalStackLayout
                        Spacing="5"
                        Grid.Column="1">
                                <Label
                           FontAttributes="Bold"
                    TextColor="Black"
                    FontSize="14"
                        Text="{Binding TotalMealCarbohydrates}"/>
                                <Label
                    TextColor="Black"
                            FontAttributes="Bold"
                    FontSize="14"
                    Text="{extention:TranslateExtention Key=Gm}"/>
                            </HorizontalStackLayout>
                        </Grid>
                        <BoxView
                    HeightRequest="1"
                    Margin="20,0,20,0"
                    Color="Black" />

                        <Grid ColumnDefinitions="*,auto">
                            <Label
                        Grid.Column="0"
                    TextColor="Black"
                        FontAttributes="Bold"
                    FontSize="14"
                    Text="{extention:TranslateExtention Key=Totalprotiens}"/>
                            <HorizontalStackLayout
                        Spacing="5"
                        Grid.Column="1">
                                <Label
                           FontAttributes="Bold"
                    TextColor="Black"
                    FontSize="14"
                        Text="{Binding TotalMealProtiens}"/>
                                <Label
                    TextColor="Black"
                            FontAttributes="Bold"
                    FontSize="14"
                    Text="{extention:TranslateExtention Key=Gm}"/>
                            </HorizontalStackLayout>
                        </Grid>
                        <BoxView
                    HeightRequest="1"
                    Margin="20,0,20,0"
                    Color="Black" />

                        <Grid ColumnDefinitions="*,auto">
                            <Label
                        Grid.Column="0"
                    TextColor="Black"
                        FontAttributes="Bold"
                    FontSize="14"
                    Text="{extention:TranslateExtention Key=Totalfats}"/>
                            <HorizontalStackLayout
                        Spacing="5"
                        Grid.Column="1">
                                <Label
                           FontAttributes="Bold"
                    TextColor="Black"
                    FontSize="14"
                        Text="{Binding TotalMealFats}"/>
                                <Label
                    TextColor="Black"
                            FontAttributes="Bold"
                    FontSize="14"
                    Text="{extention:TranslateExtention Key=Gm}"/>
                            </HorizontalStackLayout>
                        </Grid>
                        <BoxView
                    HeightRequest="1"
                    Margin="20,0,20,0"
                    Color="Black" />

                        <Grid ColumnDefinitions="*,auto">
                            <Label
                        Grid.Column="0"
                    TextColor="Black"
                        FontAttributes="Bold"
                    FontSize="14"
                    Text="{extention:TranslateExtention Key=Totalfibers}"/>
                            <HorizontalStackLayout
                        Spacing="5"
                        Grid.Column="1">
                                <Label
                           FontAttributes="Bold"
                    TextColor="Black"
                    FontSize="14"
                        Text="{Binding TotalMealFibers}"/>
                                <Label
                    TextColor="Black"
                            FontAttributes="Bold"
                    FontSize="14"
                    Text="{extention:TranslateExtention Key=Gm}"/>
                            </HorizontalStackLayout>
                        </Grid>
                        <BoxView
                    HeightRequest="1"
                    Margin="20,0,20,0"
                    Color="Black" />

                    </VerticalStackLayout>
                </Border>

                <CollectionView 
            Grid.Row="3"
            x:Name="cv"
            SelectionMode="Single"
            ItemsSource="{Binding CartItems}"
            EmptyView="No items ">
                    <CollectionView.ItemTemplate>
                        <DataTemplate  x:DataType="m:CartItem">
                            <Border 
                            BackgroundColor="WhiteSmoke"
                            StrokeThickness="0.5"
                            Padding="10"
                            Margin="5" StrokeShape="RoundRectangle 5">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroupList>
                                        <VisualStateGroup Name="CommonStates">
                                            <VisualState Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="White" />
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState Name="Focused">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="White" />
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState Name="Disabled">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="White" />
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState Name="PointerOver">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="White" />
                                                </VisualState.Setters>
                                            </VisualState>

                                            <VisualState Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="White" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateGroupList>
                                </VisualStateManager.VisualStateGroups>
                                <Grid
                            RowDefinitions="*,*,*,auto"
                            ColumnDefinitions="*,*">
                                    <Label 
                                    TextDecorations="Underline"
                                    TextColor="IndianRed" 
                                    Grid.Row="0" 
                                    Grid.ColumnSpan="2"
                                    Text="{Binding FoodName}"
                                    FontAttributes="Bold"/>

                                    <HorizontalStackLayout Grid.Row="1" Grid.Column="0">
                                        <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Quantity}"
             FontAttributes="Bold"/>
                                        <Label TextColor="DarkSlateBlue" 
             Text=" : "
             FontAttributes="Bold"/>
                                        <HorizontalStackLayout Spacing="5">
                                            <Label TextColor="IndianRed" 
             Text="{Binding Quantity}"
             FontAttributes="Bold"/>

                                            <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Gm}"
             />

                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Grid.Row="1" Grid.Column="1">
                                        <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Calories}"
             FontAttributes="Bold"/>
                                        <Label TextColor="DarkSlateBlue" 
             Text=" : "
             FontAttributes="Bold"/>
                                        <HorizontalStackLayout Spacing="5">

                                            <Label TextColor="IndianRed" 
             Text="{Binding TotalFoodCalories}"
             FontAttributes="Bold"/>
                                            <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Cal}"
            />

                                        </HorizontalStackLayout>

                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="0">
                                        <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Carb}"
             FontAttributes="Bold"/>
                                        <Label TextColor="DarkSlateBlue" 
             Text=" : "
             FontAttributes="Bold"/>
                                        <HorizontalStackLayout Spacing="5">

                                            <Label TextColor="IndianRed" 
             Text="{Binding TotalFoodCarb}"
             FontAttributes="Bold"/>
                                            <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Gm}"
             />

                                        </HorizontalStackLayout>

                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="1">
                                        <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Protiens}"
             FontAttributes="Bold"/>
                                        <Label TextColor="DarkSlateBlue" 
             Text=" : "
             FontAttributes="Bold"/>
                                        <HorizontalStackLayout Spacing="5">

                                            <Label TextColor="IndianRed" 
             Text="{Binding TotalFoodProtien}"
             FontAttributes="Bold"/>
                                            <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Gm}"
             />

                                        </HorizontalStackLayout>

                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Grid.Row="3" Grid.Column="0">
                                        <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Fats}"
             FontAttributes="Bold"/>
                                        <Label TextColor="DarkSlateBlue" 
             Text=" : "
             FontAttributes="Bold"/>
                                        <HorizontalStackLayout Spacing="5">

                                            <Label TextColor="IndianRed" 
             Text="{Binding TotalFoodFat}"
             FontAttributes="Bold"/>
                                            <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Gm}"
             />

                                        </HorizontalStackLayout>

                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Grid.Row="3" Grid.Column="1">
                                        <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Fibers}"
             FontAttributes="Bold"/>
                                        <Label TextColor="DarkSlateBlue" 
             Text=" : "
             FontAttributes="Bold"/>
                                        <HorizontalStackLayout Spacing="5">

                                            <Label TextColor="IndianRed" 
             Text="{Binding TotalFoodFibers}"
             FontAttributes="Bold"/>
                                            <Label TextColor="DarkSlateBlue" 
             Text="{extention:TranslateExtention Key=Gm}"
             />

                                        </HorizontalStackLayout>

                                    </HorizontalStackLayout>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>

    </Grid>

</ur:UraniumContentPage>

