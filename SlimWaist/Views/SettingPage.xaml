<?xml version="1.0" encoding="utf-8" ?>
<ur:UraniumContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SlimWaist.ViewModels"
             xmlns:m="clr-namespace:SlimWaist.Models"
             xmlns:extention="clr-namespace:SlimWaist.Extentions"        
             xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:mat="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SlimWaist.Views.SettingPage"
             x:Name="this"
             Shell.FlyoutBehavior="Disabled"
             Shell.FlyoutItemIsVisible="False"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="True">

    <ur:UraniumContentPage.Resources>
        <ControlTemplate x:Key="RadioButtonTemplate">
            <Border Stroke="Green"
                        StrokeThickness="0"
                        x:Name="b"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="Green"
                        HeightRequest="40"
                        WidthRequest="150"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                               Text="{TemplateBinding Content}" 
                               FontSize="15"
                               TextColor="White"
                               x:Name="lb"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                    <BoxView Grid.Row="1"
                                 x:Name="line"
                                 Color="White"
                                 WidthRequest="130"
                                 HeightRequest="1"/>
                </Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CheckedStates">
                            <VisualState x:Name="Checked">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                                Value="MediumSeaGreen" />
                                    <Setter TargetName="lb"
                                                Property="Label.TextColor"
                                                Value="White" />
                                    <Setter TargetName="line"
                                                Property="BoxView.Color"
                                                Value="White" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Unchecked">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                                Value="White" />
                                    <Setter TargetName="lb"
                                                Property="Label.TextColor"
                                                Value="MediumSeaGreen" />
                                    <Setter TargetName="line"
                                                Property="BoxView.Color"
                                                Value="MediumSeaGreen" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
            </Border>
        </ControlTemplate>

        <Style TargetType="RadioButton">
            <Setter Property="ControlTemplate"
                    Value="{StaticResource RadioButtonTemplate}" />
        </Style>
    </ur:UraniumContentPage.Resources>
   
    <Grid 
        RowDefinitions="auto,auto,*,auto"
        BackgroundColor="WhiteSmoke">
        <Grid Grid.Row="0"
            HeightRequest="80"
            VerticalOptions="Start"
            BackgroundColor="{StaticResource MainColor}">
            <Label 
                Text="الوسط الرشيق"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="5"
                FontSize="22"
                FontAttributes="Bold"
                TextColor="White">
            </Label>
        </Grid>
        
        <Border Grid.Row="1"
            Margin="-5"
            StrokeThickness="1"
            BackgroundColor="White"
            Padding="10">
            <Grid ColumnDefinitions="*,auto">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToProfilePageCommand}"/>
                </Grid.GestureRecognizers>
                <VerticalStackLayout Grid.Column="0">
                    <Label
                HorizontalOptions="Start"
                FontSize="20"
                        FontAttributes="Bold"
                TextColor="Black"
                Text="{Binding Name}"/>
                    <Label
                HorizontalOptions="Start"
                FontSize="16"
                TextColor="{StaticResource MainColor}"
                Text="تعديل تفاصيل الحساب"/>
                </VerticalStackLayout>
                <Image
                    Grid.Column="1"
                    Scale="0.5"
                    Source="back1.png">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource MainColor}"/>
                    </Image.Behaviors>
                </Image>
            </Grid>
        </Border>
        
        <ScrollView Grid.Row="2" 
                    VerticalScrollBarVisibility="Never"
                    HorizontalScrollBarVisibility="Never">
            <Grid RowDefinitions="*,auto" Padding="10">
                <VerticalStackLayout Grid.Row="0"
                    Margin="0,5,0,0">
                    <Border
                        Grid.Row="0"
                        x:Name="language"
                        Margin="0,0,0,10"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="White"
                        Padding="0">
                        <HorizontalStackLayout>
                            <Image
                                Scale="0.5"
                                Source="languageskill.png">
                            </Image>
                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                FontSize="18"
                                TextColor="Black"
                                Text="اللغة"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                    <Border
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="White"
                        Padding="0">
                        <HorizontalStackLayout>
                            <Image
                                Scale="0.5"
                                Source="rules.png">
                            </Image>
                            <Label
                            FontAttributes="Bold"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            FontSize="18"
                            TextColor="Black"
                            Text="الشروط و الأحكام"/>
                        </HorizontalStackLayout>
                    </Border>
                    <Border
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="White"
                        Padding="0">
                        <HorizontalStackLayout>
                            <Image
                                Scale="0.5"
                                Source="contactus.png">
                            </Image>
                            <Label
                            FontAttributes="Bold"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            FontSize="18"
                            TextColor="Black"
                            Text="تواصل معنا"/>
                        </HorizontalStackLayout>

                    </Border>
                    <Border
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="White"
                        Padding="0">
                        <HorizontalStackLayout>
                            <Image
                                Scale="0.5"
                                Source="like.png">
                            </Image>
                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                FontSize="18"
                                TextColor="Black"
                                Text="هل أعجبك التطبيق ؟"/>
                        </HorizontalStackLayout>

                    </Border>
                </VerticalStackLayout>
                <Border Grid.Row="1"
                    StrokeThickness="1"
                    VerticalOptions="End"
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="White"
                    Padding="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LogOutCommand}"/>
                    </Border.GestureRecognizers>

                    <HorizontalStackLayout Grid.Column="0">
                        <Image
                            Scale="0.5"
                            Source="logoutrounded.png">
                            <Image.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="Red"/>
                            </Image.Behaviors>
                        </Image>
                        <Label
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            FontSize="18"
                            TextColor="Red"
                            Text="تسجيل الخروج"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>
        </ScrollView>
        
        <Grid Grid.Row="3"
            HeightRequest="60">
            <Label
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="14"
                TextColor="Gray"
                Text="الإصدار 1.5.1"/>
        </Grid>
    </Grid>
</ur:UraniumContentPage>
